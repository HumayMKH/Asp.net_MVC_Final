@model IEnumerable<EDUHOME_Final.Models.HomeSettings>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuestionPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SitePhone1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SitePhone2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FooterLogo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FooterContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CopyRight)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SitePhone1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SitePhone2)
        </td>
        <td>
            <img src="~/Uploads/@item.Logo" alt="@item.Logo" width="100" />
        </td>
        <td>
            <img src="~/Uploads/@item.FooterLogo" alt="@item.FooterLogo" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteLink)
        </td>
        <td>
            @(item.FooterContent.Length>100?item.FooterContent.Substring(0,100)+"...":item.FooterContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CopyRight)
        </td>
        <td>
            @Html.ActionLink("Edit", "Update", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            <a href="@Url.Action("Delete","Home", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>

        </td>
    </tr>
}

</table>
