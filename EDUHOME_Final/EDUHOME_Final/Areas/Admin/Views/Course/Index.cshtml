@model IEnumerable<EDUHOME_Final.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<!-- Topbar Search -->
@using (Html.BeginForm("Index", "Course", FormMethod.Post))
 {
     
     <div class="form-horizontal">
         <div class="form-group">
             <div class="row">
                   <div class="col-md-10">
                       <input type="search" name="searchText" class="form-control bg-gradient-warning " placeholder="Search for..." style="max-width:100%;">
                   </div>
                  <div class="col-md-2">
                      <button class="btn btn-primary" type="submit">
                          SEARCH
                      </button>
                  </div>
             </div>
         </div>
    </div>

 }
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-responsive">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CkEditorContent)
            </th>

            <th>Settings</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <img src="~/Uploads/@item.Image" alt="@item.Image" width="100" />
                </td>
                <td>
                    @Html.Raw(item.CkEditorContent)
                    @*@Html.DisplayFor(modelItem => item.CkEditorContent)*@
                </td>

                <td>
                    @Html.ActionLink("Update", "Update", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    <a href="@Url.Action("Delete","Course", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }

    </table>
