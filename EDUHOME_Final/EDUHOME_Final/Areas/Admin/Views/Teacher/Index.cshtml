@model IEnumerable<EDUHOME_Final.Models.Teacher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fullname)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Degree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hobbies)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Skype)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LanguagePercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DesignPercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamLeaderPercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InnovationPercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DevelopmentPercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommunicationPercent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Fullname)
    </td>
  
    <td>
        <img src="~/Uploads/@item.Image" alt="@item.Image" width="100" />
    </td>
    <td>

        @(item.Content.Length>25?item.Content.Substring(0,25)+"...":item.Content)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Degree)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Experience)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hobbies)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Faculty)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Skype)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LanguagePercent)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DesignPercent)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TeamLeaderPercent)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.InnovationPercent)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DevelopmentPercent)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CommunicationPercent)
    </td>

    <td>
        @Html.ActionLink("Update", "Update", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        <a href="@Url.Action("Delete","Teacher", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>
    </td>
</tr>
}

</table>
