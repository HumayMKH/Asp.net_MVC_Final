@model EDUHOME_Final.ViewModels.VmAbout
@using EDUHOME_Final.ViewModels

@{
    ViewBag.Title = "Index";
}
<!-- Banner Area Start -->
<div class="banner-area-wrapper ">
    <div class="banner-area text-center" style="background-image: url('/Uploads/@Model.BannerImage.Image')">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
<div class="about-area pt-145 pb-155">
    <div class="container">
        <div class="row">
            @{
                Html.RenderPartial("~/Views/Shared/_AboutPartial.cshtml", Model.About);
            }
        </div>
    </div>
</div>
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area ">

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/Public/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>

        <div class="row">
            @{
                Html.RenderPartial("~/Views/Shared/_TeacherPartial.cshtml", Model.Teachers);
            }

        </div>

    </div>
    <!-- Teacher End -->
    <!-- Testimonial Area Start -->
    <div class="testimonial-area pt-110 pb-105 text-center">
        <div class="container">
            <div class="row">

                @{
                    Html.RenderPartial("~/Views/Shared/_TestimonialSliderPartial.cshtml", Model.TestimonialSliders);
                }

            </div>
        </div>
    </div>
    <!-- Testimonial Area End -->
    <!-- Notice Start -->
    <section class="notice-area two pt-140 pb-100">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="notice-right-wrapper mb-25 pb-25">
                        <h3>TAKE A VIDEO TOUR</h3>
                        <div class="notice-video">
                            <div class="video-icon video-hover">
                                <a class="video-popup" href="@Model.About.Video">
                                    <i class="zmdi zmdi-play"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                @{
                    Html.RenderPartial("~/Views/Shared/_NoticePartial.cshtml", Model.Notices);
                }
            </div>
        </div>
    </section>
    <!-- Notice End -->
    @{
        Html.RenderPartial("~/Views/Shared/_SubscribePartial.cshtml", new VmSubscribe { Page = "About" });
    }
