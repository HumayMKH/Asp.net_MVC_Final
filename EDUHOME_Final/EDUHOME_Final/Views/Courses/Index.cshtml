@model EDUHOME_Final.ViewModels.VmCourse
@using EDUHOME_Final.ViewModels

@{
    ViewBag.Title = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image: url('/Uploads/@Model.BannerImage.Image')">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    @using (Html.BeginForm("Index", "Courses", FormMethod.Post))
                    {
                        <input type="search" placeholder="Search..." name="searchText" />
                        <button type="submit">search</button>
                    }
                    </div>
            </div>
        </div>
        <div class="row">
            @{
                Html.RenderPartial(("~/Views/Shared/_CoursePartial.cshtml"), Model.Courses);
            }
        </div>
    </div>
</div>
<!-- Course End -->
@{
    Html.RenderPartial("~/Views/Shared/_SubscribePartial.cshtml", new VmSubscribe { Page = "Courses" });
}