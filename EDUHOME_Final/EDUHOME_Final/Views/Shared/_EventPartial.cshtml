@model List<EDUHOME_Final.Models.Event>

@foreach (var item in Model)
{
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="single-event mb-60">
            <div class="event-img">
                <a href="@Url.Action("EventDetails","Event",new { Id=item.Id})">
                    <img src="~/Uploads/@item.Image" alt="@item.Image">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
                <div class="event-date">
                    <h3>@item.CreatedDate.ToString("dd MMM")</h3>
                </div>
            </div>
            <div class="event-content text-left">
                <h4><a href="@Url.Action("EventDetails","Event",new { Id=item.Id})">@item.Name</a></h4>
                <ul>
                    <li><span>time: </span> @item.StartDate.ToString("HH:mm") AM - @item.EndDate.ToString("HH:mm")5 PM</li>
                    <li><span>venue </span> @item.Venue</li>
                </ul>
                <div class="event-content-right">
                    <a class="default-btn" href="@Url.Action("EventDetails","Event",new { Id=item.Id})">join now</a>
                </div>
            </div>
        </div>
    </div>
 }
