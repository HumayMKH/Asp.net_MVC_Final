@model EDUHOME_Final.ViewModels.VmTeacher
@using EDUHOME_Final.ViewModels
@{
    ViewBag.Title = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image: url('/Public/img/banner/banner.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @{
                Html.RenderPartial("~/Views/Shared/_TeacherPartial.cshtml", Model.Teachers);
            }
            <div class="col-md-12">
                <div class="pagination">
                    <ul>
                        @if (Model.Currentpage > 1)
                        {
                            <li><a href="@Url.Action("Index","Teacher", new { page=(Model.Currentpage==1?1:Model.Currentpage-1)})"><i class="zmdi zmdi-arrow-left"></i> </a></li>
                        }
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {

                            <li><a href="@Url.Action("Index","Teacher",new{page=i})"> @i </a></li>
                        }
                        @if (Model.Currentpage < Model.PageCount)
                        {
                            <li><a href="@Url.Action("Index","Teacher", new { page=(Model.Currentpage==Model.PageCount?Model.PageCount:Model.Currentpage+1)})"><i class="zmdi zmdi-arrow-right"></i> </a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Teacher End -->
@{
    Html.RenderPartial("~/Views/Shared/_SubscribePartial.cshtml", new VmSubscribe { Page = "Teacher" });
}

