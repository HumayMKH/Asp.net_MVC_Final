@model EDUHOME_Final.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image: url('/Public/img/banner/banner.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form  method="post" autocomplete="off">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control", @placeholder = "Name" })
                                    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Surname, null, new { @class = "form-control", @placeholder = "Surname" })
                                    @Html.ValidationMessageFor(m => m.Surname, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Username, null, new { @class = "form-control", @placeholder = "Username" })
                                    @Html.ValidationMessageFor(m => m.Username, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control", @placeholder = "Email", @type = "email" })
                                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Phone" })
                                    @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "text-danger"})
                                </div>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <a href="@Url.Action("Login","Home")" class="btn btn-warning">Login</a>
                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->
